@page
@model ContentSearchAPI.Pages.IndexModel
@{
    ViewData["Title"] = "ContentSearch Dashboard";
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary-color: #0D9488;
            --secondary-color: #F97316;
            --success-color: #10B981;
            --info-color: #0EA5E9;
            --bg-light: #F9FAFB;
            --bg-white: #FFFFFF;
            --text-dark: #1F2937;
            --text-gray: #6B7280;
            --border-color: #E5E7EB;
            --shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
            --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: var(--bg-light);
            color: var(--text-dark);
            line-height: 1.6;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 2rem;
        }

        .header {
            background: white;
            padding: 2rem;
            margin-bottom: 2rem;
            border-radius: 8px;
            box-shadow: var(--shadow);
        }

        .header h1 {
            color: var(--primary-color);
            margin-bottom: 1rem;
        }

        .search-box {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
        }

        .search-input {
            flex: 1;
            padding: 0.75rem;
            border: 2px solid var(--border-color);
            border-radius: 6px;
            font-size: 1rem;
        }

        .search-input:focus {
            outline: none;
            border-color: var(--primary-color);
        }

        .btn {
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 6px;
            font-size: 1rem;
            cursor: pointer;
            transition: all 0.2s;
        }

        .btn-primary {
            background: var(--primary-color);
            color: white;
        }

        .btn-primary:hover {
            background: #0A7A6E;
        }

        .filters {
            display: flex;
            gap: 1rem;
            align-items: center;
        }

        .filter-group {
            display: flex;
            gap: 0.5rem;
            align-items: center;
        }

        select {
            padding: 0.5rem;
            border: 2px solid var(--border-color);
            border-radius: 6px;
            font-size: 0.9rem;
        }

        .content-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 1.5rem;
            margin-bottom: 2rem;
        }

        .content-card {
            background: white;
            padding: 1.5rem;
            border-radius: 8px;
            box-shadow: var(--shadow);
            transition: transform 0.2s, box-shadow 0.2s;
        }

        .content-card:hover {
            transform: translateY(-2px);
            box-shadow: var(--shadow-md);
        }

        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: start;
            margin-bottom: 1rem;
        }

        .card-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-dark);
            flex: 1;
        }

        .badge {
            padding: 0.25rem 0.75rem;
            border-radius: 4px;
            font-size: 0.75rem;
            font-weight: 600;
            text-transform: uppercase;
        }

        .badge-video {
            background: #DCFCE7;
            color: var(--success-color);
        }

        .badge-text {
            background: #DBEAFE;
            color: var(--info-color);
        }

        .card-description {
            color: var(--text-gray);
            margin-bottom: 1rem;
            font-size: 0.9rem;
        }

        .card-stats {
            display: flex;
            gap: 1rem;
            margin-bottom: 1rem;
            font-size: 0.85rem;
            color: var(--text-gray);
        }

        .stat-item {
            display: flex;
            align-items: center;
            gap: 0.25rem;
        }

        .score-section {
            border-top: 1px solid var(--border-color);
            padding-top: 1rem;
        }

        .final-score {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
            margin-bottom: 0.5rem;
        }

        .score-breakdown {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 0.5rem;
            font-size: 0.8rem;
        }

        .score-item {
            text-align: center;
        }

        .score-label {
            color: var(--text-gray);
            display: block;
        }

        .score-value {
            font-weight: 600;
            color: var(--text-dark);
        }

        .no-results {
            text-align: center;
            padding: 3rem;
            color: var(--text-gray);
        }

        .loading {
            text-align: center;
            padding: 3rem;
            color: var(--primary-color);
        }

        @@media (max-width: 768px) {
            .content-grid {
                grid-template-columns: 1fr;
            }

            .filters {
                flex-direction: column;
                align-items: stretch;
            }

            .search-box {
                flex-direction: column;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <h1>üîç ContentSearch Dashboard</h1>

            <div class="search-box">
                <input type="text" id="searchInput" class="search-input" placeholder="Ba≈ülƒ±k veya a√ßƒ±klama ile arayƒ±n..." />
                <button onclick="search()" class="btn btn-primary">Ara</button>
            </div>

            <div class="filters">
                <div class="filter-group">
                    <label>ƒ∞√ßerik Tipi:</label>
                    <select id="contentType" onchange="search()">
                        <option value="">T√ºm√º</option>
                        <option value="1">Video</option>
                        <option value="2">Text</option>
                    </select>
                </div>

                <div class="filter-group">
                    <label>Sƒ±ralama:</label>
                    <select id="sortBy" onchange="search()">
                        <option value="2">Pop√ºlerlik (Final Score)</option>
                        <option value="1">Alakalƒ±lƒ±k</option>
                    </select>
                </div>
            </div>
        </div>

        <div id="contentGrid" class="content-grid">
            <div class="loading">Y√ºkleniyor...</div>
        </div>
    </div>

    <script>
        async function search() {
            const keyword = document.getElementById('searchInput').value;
            const contentType = document.getElementById('contentType').value;
            const sortBy = document.getElementById('sortBy').value;

            const grid = document.getElementById('contentGrid');
            grid.innerHTML = '<div class="loading">Y√ºkleniyor...</div>';

            try {
                const params = new URLSearchParams({
                    page: 1,
                    pageSize: 20
                });

                if (keyword) params.append('keyword', keyword);
                if (contentType) params.append('contentType', contentType);
                if (sortBy) params.append('sortBy', sortBy);

                const url = `/api/contents/search?${params.toString()}`;
                console.log('Fetching:', url);

                const response = await fetch(url);
                console.log('Response status:', response.status);

                if (!response.ok) {
                    throw new Error(`HTTP error! status: ${response.status}`);
                }

                const data = await response.json();
                console.log('Response data:', data);

                if (data.items && data.items.length > 0) {
                    grid.innerHTML = data.items.map(item => createCard(item)).join('');
                } else {
                    grid.innerHTML = '<div class="no-results">Sonu√ß bulunamadƒ±.</div>';
                }
            } catch (error) {
                console.error('Error details:', error);
                grid.innerHTML = `<div class="no-results">Bir hata olu≈ütu: ${error.message}</div>`;
            }
        }

        function createCard(content) {
            const typeClass = content.type === 1 ? 'badge-video' : 'badge-text';
            const typeName = content.type === 1 ? 'Video' : 'Text';

            let stats = '';
            if (content.type === 1) {
                stats = `
                    <div class="stat-item">üëÅÔ∏è ${content.views?.toLocaleString() || 0} g√∂r√ºnt√ºlenme</div>
                    <div class="stat-item">üëç ${content.likes?.toLocaleString() || 0} beƒüeni</div>
                `;
            } else {
                stats = `
                    <div class="stat-item">üìñ ${content.readingTime || 0} dk okuma</div>
                    <div class="stat-item">‚ù§Ô∏è ${content.reactions || 0} tepki</div>
                `;
            }

            return `
                <div class="content-card">
                    <div class="card-header">
                        <h3 class="card-title">${content.title}</h3>
                        <span class="badge ${typeClass}">${typeName}</span>
                    </div>
                    <p class="card-description">${content.description || 'A√ßƒ±klama yok'}</p>
                    <div class="card-stats">
                        ${stats}
                    </div>
                    <div class="score-section">
                        <div class="final-score">‚≠ê ${(content.finalScore || 0).toFixed(2)}</div>
                        <div class="score-breakdown">
                            <div class="score-item">
                                <span class="score-label">Base</span>
                                <span class="score-value">${(content.baseScore || 0).toFixed(2)}</span>
                            </div>
                            <div class="score-item">
                                <span class="score-label">Recency</span>
                                <span class="score-value">${(content.recencyScore || 0).toFixed(2)}</span>
                            </div>
                            <div class="score-item">
                                <span class="score-label">Interaction</span>
                                <span class="score-value">${(content.interactionScore || 0).toFixed(2)}</span>
                            </div>
                        </div>
                    </div>
                </div>
            `;
        }

        // Load initial data
        window.onload = () => search();

        // Search on Enter key
        document.getElementById('searchInput').addEventListener('keypress', (e) => {
            if (e.key === 'Enter') search();
        });
    </script>
</body>
</html>
